<h2>View All Animals</h2>

@if (@Model.Count == 0)
{
  <p>No animals are currently available for adoption.</p>
}
else
{
  <ul>
    @foreach (var animal in Model)
    {
      <li>@animal.GetName() was put up for adoption in @animal.GetDateOfAdmission().ToString("d").</li>
    }
  </ul>
}
<p><a href="/animals/new">Add a new animal</a></p>
<p><a href="/">Return home</a></p>

<form action="/animals/delete" method="post">
  <button type="submit">Clear the list</button>
</form>
